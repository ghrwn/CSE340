<section class="account-wrap">
  <h1><%= title %></h1>

  <% if (messages) { %>
    <%- messages() %>
  <% } %>

  <p class="form-note">
    Classification name cannot contain spaces or special characters.
  </p>

  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form class="account-form" action="/inventory/add-classification" method="post">
    <label for="classification_name">Classification Name:</label>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      required
      pattern="^[A-Za-z0-9]+$"
      title="No spaces or special characters. Letters and numbers only."
      value="<%= locals.classification_name || '' %>"
      placeholder="e.g. SUV"
    />

    <button type="submit">Add Classification</button>
  </form>

  <p class="account-alt">
    <a href="/inventory">Back to Management</a>
  </p>
</section>